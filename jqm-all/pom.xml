<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.enioka.jqm</groupId>
	<artifactId>jqm-all</artifactId>
	<version>1.1.4-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>jqm-all</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<hibernate.version>4.2.8.Final</hibernate.version>
		<junit.version>4.11</junit.version>
		<hsqldb.version>2.3.1</hsqldb.version>
		<jersey-version>2.5.1</jersey-version>
		<jetty.version>8.1.14.v20131031</jetty.version>
	</properties>

	<modules>
		<module>jqm-tests</module>
		<module>jqm-model</module>
		<module>jqm-api</module>		
		<module>jqm-ws</module>
		<module>jqm-client</module>
		<module>jqm-test-helpers</module>
		<module>jqm-engine</module>
	</modules>

	<scm>
		<developerConnection>scm:git:ssh://git@git.enioka.com/jqm.git</developerConnection>
		<connection>scm:git:ssh://git@git.enioka.com/jqm.git</connection>
		<url>https://github.com/enioka/jqm/</url>
		<tag>HEAD</tag>
	</scm>

	<profiles>
		<profile>
			<id>internal</id>
			<distributionManagement>
				<snapshotRepository>
					<id>snapshot-nexus</id>
					<name>repository for daily snaps</name>
					<layout>default</layout>
					<uniqueVersion>false</uniqueVersion>
					<url>http://10.0.3.128/nexus/content/repositories/snapshots/</url>
				</snapshotRepository>

				<repository>
					<id>nexus</id>
					<name>internal publication Nexus repository</name>
					<url>http://10.0.3.128/nexus/content/repositories/releases/</url>
				</repository>
			</distributionManagement>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.4.2</version>
				<configuration>
					<!-- Only use local Git repository, push will be manual -->
					<localCheckout>true</localCheckout>
					<pushChanges>false</pushChanges>
				</configuration>
			</plugin>

		</plugins>
	</build>

	<dependencies>
	</dependencies>

</project>
